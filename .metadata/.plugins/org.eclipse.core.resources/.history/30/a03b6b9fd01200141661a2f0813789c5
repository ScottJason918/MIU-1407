var fileFolder = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "Pictures");
var imageFiles = fileFolder.getDirectoryListing();
var pWidth = Ti.Platform.displayCaps.platformWidth;
var pHeight = Ti.Platform.displayCaps.platformHeight;
var itemCount = imageFiles.length;
var rowCount = 4;
var margin = 5;
var trueCanvasWidth = (pWidth -(margin * (rowCount + 1)));
var size = (trueCanvasWidth / rowCount);

/// Main Window set up
var mainWindow = Ti.UI.createWindow({
	backgroundColor: "000"	
});

//View for Open Button
var openView = Ti.UI.createView({
	backgroundColor: "#0080FF",
	viewAlign: "center",
	right: 15,
	left: 15,
	height: 80
});

//Open button
var openText = Ti.UI.createLabel({
	text: "Open Gallery",
	font: {fontSize: 25, fontColor: "#fff", fontFamily: "Cursive"},
	textAlign: "center"
});


var loadFile = require("extra");

openView.add(openText);
mainWindow.add(openView);
mainWindow.open();


